            </actions>
            <offsetFromField>Covenant_Information__c.Next_Covenant_Testing_Date__c</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
