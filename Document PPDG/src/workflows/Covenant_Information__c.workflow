    <rules>
        <fullName>CPF Next Covenant Testing Date is Today</fullName>
        <actions>
            <name>Next_Covenant_Testing_Date_is_Today</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Covenant_Information__c.Next_Covenant_Testing_Date__c</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>CPF Next Covenant Testing Date was Due 30 Days ago</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Covenant_Information__c.Next_Covenant_Testing_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Next_Covenant_Testing_Date_was_Due_30_Days_ago</name>
